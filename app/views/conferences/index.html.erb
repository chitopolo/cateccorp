<% if current_user %>
  <% if current_user.admin %> 
    <%- model_class = Conference -%>
    <div class="page-header">
      <h1>Conferencias</h1>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:time) %></th>
          <th><%= model_class.human_attribute_name(:date) %></th>
          <th><%= model_class.human_attribute_name(:category) %></th>
          <th><%= model_class.human_attribute_name(:obligatory) %></th>
          <th><%= model_class.human_attribute_name(:speaker) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @conferences.each do |conference| %>
          <tr>
            <td><%= link_to conference.id, conference_path(conference) %></td>
            <td><%= conference.name %></td>
            <td><%= conference.time.strftime('%H:%M') %></td>
            <td><%= conference.date.to_formatted_s(:long) %></td>
            <td><%= conference.category %></td>
            <td><%= conference.obligatory %></td>
            <td><%= conference.speaker %></td>
            <td><%=l conference.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_conference_path(conference), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          conference_path(conference),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_conference_path,
                :class => 'btn btn-primary' %>
  <% end -%>
<% end -%>

