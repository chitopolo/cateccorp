<%- model_class = Attendee -%>
<div class="page-header">
  <h1>Asistentes</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first) %></th>
      <th><%= model_class.human_attribute_name(:last) %></th>
      <th><%= model_class.human_attribute_name(:last2) %></th>
      <th><%= model_class.human_attribute_name(:career) %></th>
      <th><%= model_class.human_attribute_name(:level) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:ci) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:direction) %></th>
      <th><%= model_class.human_attribute_name(:zone) %></th>
      <th><%= model_class.human_attribute_name(:telephone) %></th>
      <th><%= model_class.human_attribute_name(:cellphone) %></th>
      <th><%= model_class.human_attribute_name(:other) %></th>
      <th><%= model_class.human_attribute_name(:health) %></th>
      <th><%= model_class.human_attribute_name(:apoderado) %></th>
      <th><%= model_class.human_attribute_name(:parentesco) %></th>
      <th><%= model_class.human_attribute_name(:telephoneapoderado) %></th>
      <th><%= model_class.human_attribute_name(:directionapoderado) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @attendees.each do |attendee| %>
      <tr>
        <td><%= link_to attendee.id, attendee_path(attendee) %></td>
        <td><%= attendee.first %></td>
        <td><%= attendee.last %></td>
        <td><%= attendee.last2 %></td>
        <td><%= attendee.career %></td>
        <td><%= attendee.level %></td>
        <td><%= attendee.email %></td>
        <td><%= attendee.ci %></td>
        <td><%= attendee.city %></td>
        <td><%= attendee.direction %></td>
        <td><%= attendee.zone %></td>
        <td><%= attendee.telephone %></td>
        <td><%= attendee.cellphone %></td>
        <td><%= attendee.other %></td>
        <td><%= attendee.health %></td>
        <td><%= attendee.apoderado %></td>
        <td><%= attendee.parentesco %></td>
        <td><%= attendee.telephoneapoderado %></td>
        <td><%= attendee.directionapoderado %></td>
        <td><%=l attendee.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_attendee_path(attendee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      attendee_path(attendee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_attendee_path,
            :class => 'btn btn-primary' %>
