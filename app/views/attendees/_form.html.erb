<%= form_for @attendee, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Nombre:", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Apellido Paterno", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Apellido Materno", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Carrera", :class => 'control-label', :for => 'inputIcon' %>
    <div class="controls">
      <%= f.text_field :career, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Nivel", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :level, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Email", :class => 'control-label' %>
    <div class="controls">
      <div class="input-prepend">
      <span class="add-on"><i class="icon-envelope"></i></span>
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "CI", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ci, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Ciudad", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Direccion", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :direction, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Zona", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Telefono", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telephone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Celular", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cellphone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Otro Numero", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :other, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Salud", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :health, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Apoderado", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :apoderado, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Parentesco", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :parentesco, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Telefono de Apoderado", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telephoneapoderado, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Direccion de Apoderado", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :directionapoderado, :class => 'text_field' %>
    </div>
  </div>


<div class = "hero-unit">
<h2>Seminarios</h2>

<% for conference in Conference.find(:all) %>
        <div>
                <%= check_box_tag "attendee[conference_ids][]", conference.id, @attendee.conferences.include?(conference)  %>
                <%= conference.name %>
                
        </div>
   <% end %>
</div>


  <div class="form-actions">
    <%= f.submit "Registrarme!", :class => 'btn btn-primary' %>
<% if current_user %>
  <% if current_user.admin %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                attendees_path, :class => 'btn' %>
                <% end -%>
                <% end -%>
  </div>
<% end %>
