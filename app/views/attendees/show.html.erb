<%- model_class = Attendee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first) %>:</strong></dt>
  <dd><%= @attendee.first %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last) %>:</strong></dt>
  <dd><%= @attendee.last %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last2) %>:</strong></dt>
  <dd><%= @attendee.last2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:career) %>:</strong></dt>
  <dd><%= @attendee.career %></dd>
  <dt><strong><%= model_class.human_attribute_name(:level) %>:</strong></dt>
  <dd><%= @attendee.level %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @attendee.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ci) %>:</strong></dt>
  <dd><%= @attendee.ci %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @attendee.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direction) %>:</strong></dt>
  <dd><%= @attendee.direction %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zone) %>:</strong></dt>
  <dd><%= @attendee.zone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
  <dd><%= @attendee.telephone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cellphone) %>:</strong></dt>
  <dd><%= @attendee.cellphone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:other) %>:</strong></dt>
  <dd><%= @attendee.other %></dd>
  <dt><strong><%= model_class.human_attribute_name(:health) %>:</strong></dt>
  <dd><%= @attendee.health %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apoderado) %>:</strong></dt>
  <dd><%= @attendee.apoderado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parentesco) %>:</strong></dt>
  <dd><%= @attendee.parentesco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephoneapoderado) %>:</strong></dt>
  <dd><%= @attendee.telephoneapoderado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:directionapoderado) %>:</strong></dt>
  <dd><%= @attendee.directionapoderado %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              attendees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_attendee_path(@attendee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              attendee_path(@attendee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
